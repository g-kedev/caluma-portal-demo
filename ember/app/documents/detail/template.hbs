{{#if this.fetchDocument.isRunning}}
  <div class="uk-text-center uk-padding">
    <UkSpinner @ratio={{2}} />
  </div>
{{else}}
  <h2 class="uk-flex uk-flex-middle">
    <LinkTo
      @route="documents.index"
      class="uk-icon-button uk-margin-right"
      uk-icon="icon: arrow-left; ratio: 2"
    />
    {{this.document.form.name}}
  </h2>

  <UkTab as |tab|>
    <tab.link-item @route="documents.detail.index" @model={{@model}}>
      {{t "documents.subnav.overview"}}
    </tab.link-item>
    <tab.link-item @route="documents.detail.edit" @model={{@model}}>
      {{t "documents.subnav.document"}}
    </tab.link-item>
  </UkTab>

  {{outlet}}
{{/if}}
